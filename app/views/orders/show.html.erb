<section class="orders-show">

  <header class="page-header">
    <h1>Order </h1>
  </header>

  
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <% @order.line_items.each do |item| %>
      <tbody>
          <%= render 'order', item: item, product: item.product, quantity: item.quantity.to_i %>
      </tbody>
      <% end %>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <h3>Thanks for the order!</h3>
  <h4>Your confirmation email has sent to <%=@order.email%></h4>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
