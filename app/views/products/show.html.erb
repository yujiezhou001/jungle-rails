<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <%if (current_user)%>
        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt>Post Review</dt>
              <dd>
                <%= form_for [@product, @review] do |f| %>
                  <%= f.text_area :description %>
                  <%= f.select :rating, [1, 2, 3, 4, 5]%>
                  <%= submit_tag "Submit" %>
                <%  end %>
              </dd>
            </dl>
        </div>
      <%end%>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
        <dt>review</dt>
        <% @product.reviews.reverse_each do |object| %>
          <dd>User: <%= object.user.name %></dd>
          <dd>Content: <%= object.description %></dd>
          <dd>Ratings:
          <% object.rating.times do  %>
          <span class="glyphicon glyphicon-star" style=color:#F3D162></span>
          <% end %>
          </dd>
          <%if current_user.name == object.user.name%>
          <dd><span><%=link_to fa_icon('trash'), product_review_path(@product.id, object.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" }%></span></dd>
          <%end%>
          <br>
          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
